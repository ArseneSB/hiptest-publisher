      <tags>
        <tag>parameters</tag>
        <tag>parameters:defaulted</tag>
        <tag>assignements</tag>
      </tags>
      <parameters>
        <parameter>
          <name>no_default</name>
        </parameter>
        <parameter>
          <name>default_integer</name>
          <default_value>1</default_value>
        </parameter>
        <parameter>
          <name>default_string</name>
          <default_value>My string</default_value>
        </parameter>
        <parameter>
          <name>default_list</name>
          <default_value/>
        </parameter>
      </parameters>
      <steps>
        <assign>
          <to>
            <var>nil_var</var>
          </to>
          <value>
            <nullliteral/>
          </value>
        </assign>
        <assign>
          <to>
            <var>float_var</var>
          </to>
          <value>
            <operation>
              <left>
                <numericliteral>3.14</numericliteral>
              </left>
              <operator>-</operator>
              <right>
                <var>default_integer</var>
              </right>
            </operation>
          </value>
        </assign>
        <assign>
          <to>
            <var>list_var</var>
          </to>
          <value>
            <list>
              <item>
                <var>nil_var</var>
              </item>
              <item>
                <list>
                  <item>
                    <var>float_var</var>
                  </item>
                </list>
              </item>
            </list>
          </value>
        </assign>
        <assign>
          <to>
            <var>dict_var</var>
          </to>
          <value>
            <dict>
              <a>
                <stringliteral>1</stringliteral>
              </a>
              <b>
                <numericliteral>1</numericliteral>
              </b>
            </dict>
          </value>
        </assign>
      </steps>
    </actionword>
    <actionword>
      <name>Control blocks</name>
      <tags>
        <tag>parameters</tag>
        <tag>dsltests</tag>
      </tags>
      <parameters>
        <parameter>
          <name>x</name>
        </parameter>
      </parameters>
      <steps>
        <while>
          <condition>
            <operation>
              <left>
                <var>x</var>
              </left>
              <operator>&lt;</operator>
              <right>
                <numericliteral>0</numericliteral>
              </right>
            </operation>
          </condition>
          <body>
            <assign>
              <to>
                <var>x</var>
              </to>
              <value>
                <operation>
                  <left>
                    <var>x</var>
                  </left>
                  <operator>+</operator>
                  <right>
                    <numericliteral>1</numericliteral>
                  </right>
                </operation>
              </value>
            </assign>
          </body>
        </while>
        <if>
          <condition>
            <operation>
              <left>
                <var>x</var>
              </left>
              <operator>==</operator>
              <right>
                <numericliteral>0</numericliteral>
              </right>
            </operation>
          </condition>
          <then>
            <step>
              <result>
                <var>x</var>
                <stringliteral> is now equal to zero</stringliteral>
              </result>
            </step>
          </then>
          <else>
            <call>
              <actionword>Control blocks</actionword>
              <arguments>
                <x>
                  <operation>
                    <left>
                      <var>x</var>
                    </left>
                    <operator>-</operator>
                    <right>
                      <numericliteral>1</numericliteral>
                    </right>
                  </operation>
                </x>
              </arguments>
            </call>
          </else>
        </if>
      </steps>
    </actionword>
  </actionwords>
